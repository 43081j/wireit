{
  "name": "wireit",
  "private": true,
  "version": "0.0.1",
  "description": "A build system",
  "license": "MIT",
  "main": "bin/wireit.js",
  "bin": {
    "wireit": "bin/wireit.js"
  },
  "type": "module",
  "scripts": {
    "prepare": "ln -s ../../bin/wireit.js node_modules/.bin/wireit",
    "build": "wireit",
    "ts": "wireit",
    "test": "wireit",
    "test:runmode": "wireit",
    "test:freshness": "wireit",
    "test:watchmode": "wireit",
    "test:filesystem-caching": "wireit",
    "test:github-caching": "wireit",
    "clean": "rm -rf lib",
    "nuke": "rm -rf node_modules && npm ci",
    "upgrade": "rm -rf node_modules package-lock.json && npm i"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "ts"
      ]
    },
    "ts": {
      "command": "tsc",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "lib/**/*"
      ]
    },
    "test": {
      "dependencies": [
        "test:runmode",
        "test:freshness",
        "test:watchmode",
        "test:filesystem-caching",
        "test:github-caching"
      ]
    },
    "test:runmode": {
      "command": "NODE_OPTIONS=--enable-source-maps uvu lib/test \"run-test.js$\"",
      "files": [],
      "output": [],
      "dependencies": [
        "ts"
      ]
    },
    "test:freshness": {
      "command": "NODE_OPTIONS=--enable-source-maps uvu lib/test \"freshness-test.js$\"",
      "files": [],
      "output": [],
      "dependencies": [
        "ts"
      ]
    },
    "test:watchmode": {
      "command": "NODE_OPTIONS=--enable-source-maps uvu lib/test \"watch-test.js$\"",
      "files": [],
      "output": [],
      "dependencies": [
        "ts"
      ]
    },
    "test:filesystem-caching": {
      "command": "NODE_OPTIONS=--enable-source-maps uvu lib/test \"filesystem-caching-test.js$\"",
      "files": [],
      "output": [],
      "dependencies": [
        "ts"
      ]
    },
    "test:github-caching": {
      "command": "NODE_OPTIONS=--enable-source-maps uvu lib/test \"github-caching-test.js$\"",
      "files": [],
      "output": [],
      "dependencies": [
        "ts"
      ]
    }
  },
  "devDependencies": {
    "@types/node": "^17.0.15",
    "typescript": "^4.5.4",
    "uvu": "^0.5.2"
  },
  "dependencies": {
    "@actions/cache": "^1.0.8",
    "chokidar": "^3.5.2",
    "fast-glob": "^3.2.7",
    "mri": "^1.2.0"
  }
}
