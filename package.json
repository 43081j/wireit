{
  "name": "wireit",
  "private": true,
  "version": "0.0.1",
  "description": "A build system",
  "license": "MIT",
  "main": "bin/wireit.js",
  "bin": {
    "wireit": "bin/wireit.js"
  },
  "type": "module",
  "scripts": {
    "build": "node bin/wireit.js",
    "test": "node bin/wireit.js",
    "test:watch": "node bin/wireit.js watch test",
    "test:runmode": "node bin/wireit.js",
    "test:runmode:watch": "node bin/wireit.js watch test:runmode",
    "test:watchmode": "node bin/wireit.js",
    "test:watchmode:watch": "node bin/wireit.js watch test:watchmode",
    "clean": "rm -rf lib",
    "nuke": "rm -rf node_modules && npm ci",
    "upgrade": "rm -rf node_modules package-lock.json && npm i"
  },
  "wireit": {
    "tasks": {
      "build": {
        "dependendies": [
          "ts"
        ]
      },
      "ts": {
        "command": "tsc",
        "files": [
          "src/**/*.ts",
          "tsconfig.json"
        ]
      },
      "test": {
        "command": "uvu lib/test '-test.js$'",
        "dependencies": [
          "ts"
        ]
      },
      "test:runmode": {
        "command": "uvu lib/test 'run-test.js$'",
        "dependencies": [
          "ts"
        ]
      },
      "test:watchmode": {
        "command": "uvu lib/test 'watch-test.js$'",
        "dependencies": [
          "ts"
        ]
      }
    }
  },
  "devDependencies": {
    "@types/node": "^17.0.1",
    "typescript": "^4.5.4",
    "uvu": "^0.5.2"
  },
  "dependencies": {
    "chokidar": "^3.5.2",
    "fast-glob": "^3.2.7"
  }
}
