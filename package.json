{
  "name": "wireit",
  "private": true,
  "version": "0.0.1",
  "description": "A build system",
  "license": "MIT",
  "main": "bin/wireit.js",
  "bin": {
    "wireit": "bin/wireit.js"
  },
  "type": "module",
  "scripts": {
    "build": "node bin/wireit.js",
    "test": "node bin/wireit.js",
    "test:runmode": "node bin/wireit.js",
    "test:watchmode": "node bin/wireit.js",
    "test:caching": "node bin/wireit.js",
    "clean": "rm -rf lib",
    "nuke": "rm -rf node_modules && npm ci",
    "upgrade": "rm -rf node_modules package-lock.json && npm i"
  },
  "wireit": {
    "build": {
      "dependendies": [
        "ts"
      ]
    },
    "ts": {
      "command": "tsc",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "outputs": [
        "lib/**/*"
      ]
    },
    "test": {
      "dependencies": [
        "test:runmode",
        "test:watchmode",
        "test:caching"
      ]
    },
    "test:runmode": {
      "command": "NODE_OPTIONS=--enable-source-maps uvu lib/test \"run-test.js$\"",
      "dependencies": [
        "ts"
      ]
    },
    "test:watchmode": {
      "command": "NODE_OPTIONS=--enable-source-maps uvu lib/test \"watch-test.js$\"",
      "dependencies": [
        "ts"
      ]
    },
    "test:caching": {
      "command": " NODE_OPTIONS=--enable-source-maps uvu lib/test \"caching-test.js$\"",
      "dependencies": [
        "ts"
      ]
    }
  },
  "devDependencies": {
    "@types/node": "^17.0.1",
    "typescript": "^4.5.4",
    "uvu": "^0.5.2"
  },
  "dependencies": {
    "@actions/cache": "^1.0.8",
    "chokidar": "^3.5.2",
    "fast-glob": "^3.2.7"
  }
}
